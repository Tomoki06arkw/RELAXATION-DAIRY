<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@form.user.name}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @form.user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @form.title %></td>
          </tr>
          <tr>
            <th class="table__col1">所属</th>
            <td class="table__col2"><%= @form.content %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@form.user.name}さんの日記投稿一覧"%>
      </h2>
      <%= link_to "トップページに戻る", forms_path %>
    </div>
  </div>
</div>