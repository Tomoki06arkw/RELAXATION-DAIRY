<h2>ログイン</h2>

<div class='login-flash-message'>
  <%= flash[:notice] %>
  <%= flash[:alert] %>
</div>
<%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
<div class="content-field">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field-main'%>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "field-main" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログインする", class: "submit-btn" %>
      </div>
<% end %>
  <div class="footer-info">
   <%= render "devise/shared/links" %>
  </div>
  <div class="footer-btn">
   <%= link_to "ホームへ戻る", root_path, class: "back-btn" %>
   </div>
</div>