<h2>ユーザー登録情報</h2>

<%= form_for(@user, url: user_registration_path) do |f| %>
<div class="all">
  <div class="error_message">
  <%= render "devise/shared/error_messages", resource: @user %>
  </div>
  <div class="field">
    <%= f.label :name, "フルネーム" %><br />
    <%= f.text_field :name, class: "name-field" %>
  </div>

  <div class="field">
    <%= f.label :age, "年齢" %><br />
    <%= f.text_field :age, class: "age-field" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email-filed" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password" %>
  </div>
  <div class="actions">
    <%= f.submit "次に進む", class: "next-btn" %>
  </div>
<% end %>
<div class="footer-new-info">
<%= render "devise/shared/links" %>
<%= link_to "ホームへ戻る", root_path, class:"btn"%>
</div>
  <br>
  <br>
</div>
